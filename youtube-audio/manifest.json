{
  "name": "Youtube audio player",
  "version": "1.0.0",
  "description": "youtube audio player.",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "youtube-audio",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*.nytimes.com/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ]
}